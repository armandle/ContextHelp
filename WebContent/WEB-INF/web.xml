<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>HelpFramework</display-name>
  <context-param>
  	<description>
  	Vaadin production mode</description>
  	<param-name>productionMode</param-name>
  	<param-value>false</param-value>
  </context-param>
  <servlet>
  	<servlet-name>ContextHelp Application</servlet-name>
  	<servlet-class>
  	com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
  	<init-param>
  		<description>
  		Vaadin application class to start</description>
  		<param-name>application</param-name>
  		<param-value>org.vaadin.jonatan.contexthelp.demo.ContextHelpApplication</param-value>
  	</init-param>
  	<init-param>
  		<description>
  		Application widgetset</description>
  		<param-name>widgetset</param-name>
  		<param-value>org.vaadin.jonatan.contexthelp.widgetset.ContexthelpWidgetset</param-value>
  	</init-param>
  </servlet>
  <servlet>
  	<servlet-name>CheckBox test</servlet-name>
  	<servlet-class>
  	com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
  	<init-param>
  		<description>
  		Vaadin application class to start</description>
  		<param-name>application</param-name>
  		<param-value>org.vaadin.jonatan.contexthelp.test.applications.TestCheckBoxApplication</param-value>
  	</init-param>
  	<init-param>
  		<description>
  		Application widgetset</description>
  		<param-name>widgetset</param-name>
  		<param-value>org.vaadin.jonatan.contexthelp.widgetset.ContexthelpWidgetset</param-value>
  	</init-param>
  </servlet>
  <servlet>
  	<servlet-name>scrolling test</servlet-name>
  	<servlet-class>
  	com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
  	<init-param>
  		<description>
  		Vaadin application class to start</description>
  		<param-name>application</param-name>
  		<param-value>org.vaadin.jonatan.contexthelp.test.applications.TestScrollingApplication</param-value>
  	</init-param>
  	<init-param>
  		<description>
  		Application widgetset</description>
  		<param-name>widgetset</param-name>
  		<param-value>org.vaadin.jonatan.contexthelp.widgetset.ContexthelpWidgetset</param-value>
  	</init-param>
  </servlet>
  <servlet>
  	<servlet-name>Issue 10</servlet-name>
  	<servlet-class>
  	com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
  	<init-param>
  		<description>
  		Vaadin application class to start</description>
  		<param-name>application</param-name>
  		<param-value>org.vaadin.jonatan.contexthelp.test.applications.Issue10</param-value>
  	</init-param>
  	<init-param>
  		<description>
  		Application widgetset</description>
  		<param-name>widgetset</param-name>
  		<param-value>org.vaadin.jonatan.contexthelp.widgetset.ContexthelpWidgetset</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ContextHelp Application</servlet-name>
  	<url-pattern>/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CheckBox test</servlet-name>
  	<url-pattern>/test/checkbox/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>scrolling test</servlet-name>
  	<url-pattern>/test/scrolling/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Issue 10</servlet-name>
  	<url-pattern>/test/issue10/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>